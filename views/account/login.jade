extends ../layout

block content
  script.
    $(function(){
    $('#sign-up').click(function(){
     $('#loginform').toggle();
     $('#signupform').toggle();
    });
    });
    $(function(){
    $('#log-in').click(function(){
     $('#loginform').toggle();
     $('#signupform').toggle();
    });
    });
  section#header2(style='background: url(img/img01.jpg) center center;')


  .container
    .lgform(id="loginform")
      .omb_login
        h3.omb_authTitle
          include ../partials/flash
          | Login or
          a(href="javascript:void(0);", id="sign-up")|  Sign up

        .row.omb_row-sm-offset-3.omb_socialButtons
          .col-xs-4.col-sm-2
            a.btn.btn-lg.btn-block.omb_btn-facebook(href='/auth/facebook')
              i.fa.fa-facebook.visible-xs
              span.hidden-xs Facebook
          .col-xs-4.col-sm-2
            a.btn.btn-lg.btn-block.omb_btn-twitter(href='/auth/twitter')
              i.fa.fa-twitter.visible-xs
              span.hidden-xs Twitter
          .col-xs-4.col-sm-2
            a.btn.btn-lg.btn-block.omb_btn-google(href='/auth/google')
              i.fa.fa-google-plus.visible-xs
              span.hidden-xs Google+
        .row.omb_row-sm-offset-3.omb_loginOr
          .col-xs-12.col-sm-6
            hr.omb_hrOr
            span.omb_spanOr or

        .row.omb_row-sm-offset-3
          .col-xs-12.col-sm-6
            form(method='POST')
                input(type='hidden', name='_csrf', value=_csrf, action='/login')
                .col-sm-8.col-sm-offset-2
                  .form-group
                    label.control-label(for='email') Email
                    input.form-control(type='text', name='email', id='email', placeholder='Email', autofocus=true)
                  .form-group
                    label.control-label(for='password') Password
                    input.form-control(type='password', name='password', id='password', placeholder='Password')
                  .form-group
                    button.btn.btn-lg.btn-primary.btn-block(type='submit', name="Login", value = "Login") Login

    .suf(id="signupform",style="display:none;")
      .omb_login
        h3.omb_authTitle
          include ../partials/flash
          a(href="javascript:void(0);", id="log-in")| Login
          |  or
          |  Sign up

        .row.omb_row-sm-offset-3.omb_socialButtons
          .col-xs-4.col-sm-2
            a.btn.btn-lg.btn-block.omb_btn-facebook(href='/auth/facebook')
              i.fa.fa-facebook.visible-xs
              span.hidden-xs Facebook
          .col-xs-4.col-sm-2
            a.btn.btn-lg.btn-block.omb_btn-twitter(href='/auth/twitter')
              i.fa.fa-twitter.visible-xs
              span.hidden-xs Twitter
          .col-xs-4.col-sm-2
            a.btn.btn-lg.btn-block.omb_btn-google(href='/auth/google')
              i.fa.fa-google-plus.visible-xs
              span.hidden-xs Google+
        .row.omb_row-sm-offset-3.omb_loginOr
          .col-xs-12.col-sm-6
            hr.omb_hrOr
            span.omb_spanOr or

        .row.omb_row-sm-offset-3
          .col-xs-12.col-sm-6
            form(method='POST')
                input(type='hidden', name='_csrf', value=_csrf, action='/login',)
                .col-sm-8.col-sm-offset-2
                  .form-group
                    label.control-label(for='name') Username
                    input.form-control(type='name', name='name', id='name', placeholder='User Name', autofocus=true)
                  .form-group
                    label.control-label(for='email') Email
                    input.form-control(type='text', name='email', id='email', placeholder='Email', autofocus=true)
                  .form-group
                    label.control-label(for='password') Password
                    input.form-control(type='password', name='password', id='password', placeholder='Password')
                  .form-group
                    label.control-label(for='confirmPassword') Confirm Password
                    input.form-control(type='password', name='confirmPassword', id='confirmPassword', placeholder='Confirm Password')
                  .form-group
                    button.btn.btn-lg.btn-success.btn-block(type='submit', name="Signup", value ="Signup") Sign Up

          .row.omb_row-sm-offset-3
            .col-xs-12.col-sm-3
              p.omb_forgotPwd
                a(href='/forgot') Forgot password?
